<body>
    <div class="container">
        <div class="image-container">
            <img src="https://d3b3annyeby0cn.cloudfront.net/userfiles/2150dp%20.jpg" alt="Interactive" width="350" />
            <div class="point point1" onclick="showInfo(1)"></div>
            <div class="point point2" onclick="showInfo(2)"></div>
            <div class="point point3" onclick="showInfo(3)"></div>
            <div class="point point4" onclick="showInfo(4)"></div>
            <div class="point point5" onclick="showInfo(5)"></div>
            <div class="point point6" onclick="showInfo(6)"></div>
            <div class="point point7" onclick="showInfo(7)"></div>
        </div>

        <div class="info" id="info-box">
            <div class="preview-text">Hover or click a point to explore glove features</div>
            <h3>Welcome</h3>
            <p>Select a highlighted point to learn more about each glove detail.</p>
        </div>
    </div>

    <script>
        const infoBox = document.getElementById("info-box");

        const content = {
            1: {
                title: "Double Palm",
                text: "Certain styles are equipped with palm reinforcements to maximize grip, durability, and protection in tough environments."
            },
            2: {
                title: "Ring Band",
                text: "The Majestic ring band is a registered trademark and a hallmark of our craftsmanship and glove quality."
            },
            3: {
                title: "Pre-curved Fingers",
                text: "Ergonomically shaped fingers follow natural hand contours to reduce fatigue and improve comfort."
            },
            4: {
                title: "Palm Material",
                text: "Armor Skin™ synthetic leather and premium options deliver superior abrasion resistance and durability."
            },
            5: {
                title: "Neoprene Knuckle",
                text: "Flexible neoprene adds stretch, comfort, and durability in high‑movement areas."
            },
            6: {
                title: "Knit Back",
                text: "Breathable knit back improves airflow while maintaining structure, flexibility, and protection."
            },
            7: {
                title: "Wrist Closure",
                text: "Choose between slip‑on or Velcro strap designs for personalized fit and convenience."
            }
        };

        function showInfo(point) {
            const data = content[point];
            infoBox.classList.add("visible");
            infoBox.innerHTML = `
                <div class="preview-text">Feature Highlight</div>
                <h3>${data.title}</h3>
                <p>${data.text}</p>
            `;
        }
    </script>
